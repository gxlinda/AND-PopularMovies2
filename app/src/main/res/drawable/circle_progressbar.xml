<?xml version="1.0" encoding="utf-8"?>

<!-- Code source: https://demonuts.com/2017/01/02/android-circular-progress-bar-percentage/ -->

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/secondaryProgress">
        <shape
            android:shape="ring"
            android:thicknessRatio="8.0"
            android:useLevel="true">


            <gradient
                android:centerColor="#e0e0e0"
                android:endColor="#e0e0e0"
                android:startColor="#e0e0e0"
                android:type="sweep" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <rotate
            android:fromDegrees="270"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="270">

            <shape
                android:shape="ring"
                android:thicknessRatio="8.0"
                android:useLevel="true">


                <gradient
                    android:centerColor="#40a2df"
                    android:endColor="#90e9f1"
                    android:startColor="#071a89"
                    android:type="sweep" />

            </shape>
        </rotate>
    </item>
</layer-list>